    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug g++",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{
                "name": "LD_LIBRARY_PATH",
                "value": "engine/third-party/build/SFML/lib:${env:LD_LIBRARY_PATH}"
            }],
            "linux": {
                "program": "${workspaceFolder}/build/linux_gmake_gcc_debug/bin/Game_Linux",
            },
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "quick make (g++, debug)",
            "miDebuggerPath": "/usr/bin/gdb"
        },
