{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dependencies",
            "type": "shell",
            "command": "engine/third-party/build_sfml.py",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "clean dependencies",
            "type": "shell",
            "command": "engine/third-party/clean_sfml.py",
            "problemMatcher": [
                {
                    "owner": "dotnet-format",
                    "pattern": [
                        {
                            "regexp": "File \"(.*)\", line (\\d+), in (.*)$",
                            "file": 1,
                            "line": 2,
                            "message": 3
                        }
                    ]
                }
            ],
            "group": "build"
        },
        {
            "label": "clean engine",
            "type": "shell",
            "command": "engine/clean_engine.py",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "premake5 gmake",
            "type": "shell",
            "command": "premake5 gmake",
            "problemMatcher": [],
            "group": "build",
            "dependsOn": "build dependencies"
        },
        {
            "label": "make (g++)",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "build",
                "env": {"CXX": "g++-10"}
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "premake5 gmake"
        },
        {
            "label": "make (clang++)",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "build",
                "env": {"CXX": "clang++-10"}
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "premake5 gmake"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "./clean.sh",
            "windows": {
                "command": ".\\clean.cmd",
            },
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
